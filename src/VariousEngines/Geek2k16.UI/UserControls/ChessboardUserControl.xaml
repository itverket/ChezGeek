<UserControl x:Class="Geek2k16.UI.UserControls.ChessboardUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Geek2k16.UI.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="480">
    <Grid>
        <Border BorderBrush="Gray" BorderThickness="1">
            <Grid VerticalAlignment="Top" Height="120">
                <Button
                    Background="Azure"
                    Width="240"
                    Height="60"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Click="MakeMove_OnClick">
                    Next Move
                </Button>

            </Grid>
        </Border>
        <Border BorderBrush="Gray" BorderThickness="1">

            <UniformGrid  Height="480" Rows="8" Columns="8" Name="Grid" VerticalAlignment="Bottom">
            </UniformGrid>
        </Border>
    </Grid>
</UserControl>

